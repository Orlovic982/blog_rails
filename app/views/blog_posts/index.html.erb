<h1>My blog</h1>
<% @blog_posts.each do |blog| %>
  <div>
    <% if blog.draft? %>
      <div class="p-2 w-1/3 rounded bg-blue-400 text-gray-900">
        Draft
      </div>
    <% elsif blog.published? %>
      <div class="p-2 w-1/3 rounded bg-green-400 text-gray-900">
        Published
      </div>
    <% else %>
      <div class="p-2 w-1/3 rounded bg-red-400 text-gray-900">
        Scheduled
      </div>
    <% end %>
    <h2><%= link_to blog.title, blog %>
    </h2>
    <!--
    <h2><%= link_to blog.title, blog_post_path(blog) %>
    </h2>
    -->
    <%= blog.body %>
  </div>
<% end %>
<%= link_to " Create ne blog", new_blog_post_path %>
